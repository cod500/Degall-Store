<!-- Page Content -->
<div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img class="d-block home-img img-fluid" src="img/modern-pillow.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block font-weight-bold ">
                <h5 class="display-4">Open Right Now and Here For You</h5>
                <p>Most-loved brands.</p>
                <a href="/products/pillows"><button type="button" class="btn btn-outline-dark font-weight-bold">Shop now</button></a>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block home-img img-fluid" src="img/woman-happy.jpg" alt="Second slide">
             <div class="carousel-caption d-none d-md-block font-weight-bold">
                <h5 class="display-4">Comfy Women's Basics</h5>
                <p>Up to 30% off decorative scarves</p>
                <a href="/products/scarves"><button type="button" class="btn btn-outline-dark font-weight-bold">Shop now</button></a>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block home-img img-fluid" src="img/pose-in-cat-socks.jpg" alt="Second slide">
             <div class="carousel-caption d-none d-md-block font-weight-bold">
                <h5 class="display-4">Best Sellers: Customers Love These!</h5>
                <p>30% off select styles.</p>
                <a href="/products/socks"><button type="button" class="btn btn-outline-dark font-weight-bold">Shop now</button></a>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    {{#each (limitProducts products 6)}}
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            <a href="#"><img class="card-img-top" src="/img/products/{{id}}/{{image}}" alt=""></a>
            <div class="card-body">
                <h4 class="card-title">
                    <a href="/products/{{category}}/{{slug}}">{{title}}</a>
                </h4>
                <h5>${{fixed price}}</h5>
                <p class="card-text">{{description}}
                </p>
            </div>
            <div class="card-footer">
                <small class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
            </div>
        </div>
    </div>
    {{/each}}