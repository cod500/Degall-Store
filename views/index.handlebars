<!-- Page Content -->
<div class="container-fluid">
    <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="d-block home-img img-fluid" src="img/swimmers-small.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block font-weight-bold banner-letter">
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block home-img img-fluid" src="img/beach.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block font-weight-bold banner-letter">
                    <h5 class="display-4">
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container-fluid new-block sale-block">
        <h1>Designer Clearance</h1>
        <h3>Up To <span>60%</span> Off</h3>
        <p>New markdowns on designer items</p>
        <div class="new-links">
            <ul>

                <a href="/products/">Women's Designer Sale</a>
                <a href="/products/">Men's Designer Sale</a>

            </ul>
        </div>
    </div>

    <div class="twin-banner">
        <div class="banner-img">
            <img src="/img/summer-items.jpg" alt="">
            <p>Under $80</p>
            <p>Sun-loving styles at the perfect price for the whole family.</p>
            <div class="new-links">
                <ul>
                    {{#each categories}}
                    <a href="/products/{{slug}}">{{title}}</a>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="banner-img">
            <img src="/img/smiling-woman.jpg" alt="">
            <p>Cool Tops for Hot Days</p>
            <p>Get into our casual, comfortable and versatile picks.</p>
            <div class="new-links">
                <ul>
                    <a href="/products/tops">Tops</a>
                </ul>
            </div>
        </div>

    </div>

    <div class="container-fluid new-block">
        <h1>New Arrivals</h1>
        <p>Check out the latest brands and styles.</p>
        <div class="new-links">
            <h4>New Arrivals:</h4>
            <ul>
                {{#each categories}}
                <a href="/products/{{slug}}">{{title}}</a>
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="container-fluid home-product-list">
        <h2>Great deals on popular items</h2>
        <div class="row text-center">
            {{#each (limitProducts products 8)}}
            <div class="col-xs-12 col-sm-3 col-m-3 col-l-2 align-text-bottom mb-5">
                {{#if image}}
                <a href="/products/{{category}}/{{slug}}"><img class="card-img-top product-listing"
                        src="/img/products/{{id}}/{{image}}" alt=""></a>
                {{else}}
                <a href="/products/{{category}}/{{slug}}"><img class="card-img-top product-listing"
                        src="/img/no-image.png" alt=""></a>
                {{/if}}
                <h4 class="">
                    <a href="/products/{{category}}/{{slug}}">{{title}}</a>
                </h4>
                <h5>${{fixed price}}</h5>
                <p class="text-dark">&#9733; &#9733; &#9733; &#9733; &#9734;</p>
            </div>
            {{/each}}
        </div>
    </div>
</div>