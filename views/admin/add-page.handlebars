<h2 class="page-title">Add Page</h2>
<a href="/admin/pages" class="btn btn-primary">Back to pages</a>
<br><br>

<form method="POST" action="/admin/page/add">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" id="page-title" name="title" value="{{title}}" placeholder="title">
    </div>

    <div class="form-group">
        <label for="">Slug</label>
        <input type="text" class="form-control" name="slug" value="{{slug}}" placeholder="slug">
    </div>

    <div class="form-group">
        <label for="">Content</label>
        <textarea type="text" class="form-control" id="page-content"name="content">{{content}}</textarea>
    </div>

    <input type="submit" value="Submit" class="btn btn-primary" placeholder="content">
</form>