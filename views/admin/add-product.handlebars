<h2 class="page-title">Add Product</h2>
<a href="/admin/products" class="btn btn-primary">Back to products</a>
<br><br>

<form method="POST" action="/admin/product/add" enctype="multipart/form-data">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="{{title}}" placeholder="title">
    </div>

    <div class="form-group">
        <label for="">Description</label>
        <input type="text" class="form-control" name="description" value="{{description}}" placeholder="description">
    </div>

    <div class="form-group">
        <label for="">Category</label>
        <select type="number" class="form-control" name="category" value="{{category}}" placeholder="category">
            {{#each categories}}
            <option value="{{slug}}">{{title}}</option>
            {{/each}}
        </select>
    </div>

    <div class="form-group">
        <label for="">Price</label>
        <input type="number" step= ".01"class="form-control" name="price" value="{{price}}" placeholder="price">
    </div>

    <div class="form-group">
        <label for="">Product Image</label>
        <input type="file" name="image" />
    </div>

    <input type="submit" value="Submit" class="btn btn-primary" placeholder="content">
</form>