<div class="row">
    {{#each products}}
    <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
            {{#if image}}
            <a href="/products/{{category}}/{{slug}}"><img class="card-img-top product-listing" src="/img/products/{{id}}/{{image}}" alt=""></a>
            {{else}}
            <a href="/products/{{category}}/{{slug}}"><img class="card-img-top product-listing" src="/img/no-image.png" alt=""></a>
            {{/if}}
            <div class="card-body">
                <h4 class="card-title">
                    <a href="/products/{{category}}/{{slug}}">{{title}}</a>
                </h4>
                <h5>${{fixed price}}</h5>
                <p class="card-text">{{description}}</p>
                <a href="/products/{{category}}/{{slug}}">View Details</a>
            </div>
            <div class="card-footer">
                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
            </div>
        </div>
    </div>
    {{/each}}
</div>